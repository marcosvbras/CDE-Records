<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/vermelho"
    tools:context="br.com.cderecords.activity.ParticipantesActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_main"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:layout_alignParentLeft="true"
        android:layout_margin="8dp"
        android:elevation="4dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <TextView
        android:id="@+id/tv_evento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/amarelo"
        android:layout_marginTop="5dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="Evento" />
    
    <TextView
        android:id="@+id/tv_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:textColor="@color/branco"
        android:layout_marginTop="5dp"
        android:text="nÃºmero de pessoas" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" >

        <TextView
            android:id="@+id/tv_mulheres"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/amarelo"
            android:textSize="45dp" />

        <TextView
            android:id="@+id/tv_homens"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/amarelo"
            android:textSize="45dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="57dp"
            android:src="@drawable/woman_white" />
        
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:src="@drawable/minilogo_white" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:src="@drawable/man_white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <Button
                android:id="@+id/bnt_maismulher"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:onClick="controlarMulheres"
                android:layout_marginLeft="50dp"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="@color/vermelho"
                android:background="@drawable/buttons_border"
                android:text="@string/button_mais" />

            <Button
                android:id="@+id/bnt_menosmulher"
                android:layout_width="80dp"
                android:layout_height="55dp"
                android:onClick="controlarMulheres"
                android:textSize="40sp"
                android:textColor="@color/vermelho"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/buttons_border"
                android:text="@string/button_menos" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <Button
                android:id="@+id/bnt_maishomem"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="5dp"
                android:textSize="40sp"
                android:textStyle="bold"
                android:onClick="controlarHomens"
                android:textColor="@color/vermelho"
                android:background="@drawable/buttons_border"
                android:text="@string/button_mais" />

            <Button
                android:id="@+id/bnt_menoshomem"
                android:layout_width="80dp"
                android:layout_height="55dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/vermelho"
                android:textSize="40sp"
                android:onClick="controlarHomens"
                android:background="@drawable/buttons_border"
                android:text="@string/button_menos" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout><!-- From: file:/C:/android-studio-workspace/CDERecords/app/src/main/res/layout/activity_participantes.xml -->